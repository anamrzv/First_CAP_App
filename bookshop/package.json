{
  "name": "test",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^12 || ^14"
  },
  "dependencies": {
    "@sap/audit-logging": "^5.1.0",
    "@sap/cds": "5.4.3",
    "@sap/xssec": "^3.2.1",
    "express": "^4",
    "passport": "^0.5.0",
    "supertest": "^6.1.6",
    "@sap/hana-client": "^2.8.20",
    "sap-cf-mailer": "^0.0.5"
  },
  "devDependencies": {
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "test": "jest",
    "build:mta": "mbt build --mtar=test_1.0.0.mtar",
    "deploy": "cf deploy mta_archives/test_1.0.0.mtar",
    "build:deploy": "run-s build:mta deploy",
    "undeploy:cf": "cf undeploy test --delete-services --delete-service-keys --delete-service-brokers -f",
    "build:clean": "cds build/all --clean --production"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "[production]": {
          "kind": "hana",
          "model": [
            "db",
            "srv",
            "app"
          ],
          "pool": {
            "acquireTimeoutMillis": 5000,
            "max": 1000
          }
        }
      },
      "strategy": {
        "kind": "JWT"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv\\external\\API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "demodest"
        }
      },
      "messaging": {
        "kind": "enterprise-messaging"
      }
    }
  }
}
