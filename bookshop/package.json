{
  "name": "test",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "supertest": "^6.1.6",
    "hdb": "^0.18.3"
  },
  "devDependencies": {
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "test": "jest",
    "build:mta": "mbt build --mtar=test_1.0.0.mtar",
    "deploy": "cf deploy mta_archives/test_1.0.0.mtar",
    "build:deploy": "run-s build:mta deploy",
    "undeploy:cf": "cf undeploy test --delete-services --delete-service-keys --delete-service-brokers -f"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "model": [
          "db",
          "srv",
          "app"
        ],
        "kind": "hana"
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv\\external\\API_BUSINESS_PARTNER"
      }
    }
  }
}