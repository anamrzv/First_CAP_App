  "version": "0.2.0",
  "configurations": [

    {
      "command": "cds run --with-mocks --in-memory?",
      "name": "cds run",
      "request": "launch",
      "type": "node-terminal",
      "skipFiles": [ "<node_internals>/**" ]
    },
    {
      "command": "cd approuter; npm run start:custom",
      "name": "approuter debugging",
      "request": "launch",
      "type": "node-terminal",

      "env": {

        "XS_APP_LOG_LEVEL": "DEBUG",

        "DEBUG": "X",

        "NODE_ENV": "development"

      },

      "skipFiles": [

        "<node_internals>/**"

      ]

    },
  ]
}
